<article class="post-excerpt">
    <header>
        <a href="{{url}}"><h2 class="post-excerpt-title">{{title}}</h2></a>
        <time class="post-excerpt-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM YYYY"}}</time>
    </header>
    <div class="post-excerpt-text">
        {{excerpt words="200"}}...
    </div>
</article> 